<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.qiujuer.italker.push.activities.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:elevation="@dimen/len_2"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop"
        android:background="@drawable/background_semicircle"
        app:elevation="0dp">

        <!--信息界面-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4"
            android:orientation="vertical"
            android:id="@+id/ActiveLayout"
            android:visibility="visible"
            tools:visibility="gone"
            >

            <EditText
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/background_circle"
                android:text="搜索消息内容"
                android:textSize="@dimen/len_14"
                android:gravity="center"
                android:textStyle="bold"
                android:singleLine="true"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/btn_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/len_32"
                        android:layout_marginLeft="@dimen/len_100"
                        android:background="@color/g_default_base_transparent"
                        android:text="私信"
                        android:textSize="@dimen/len_14"
                        android:gravity="center"
                        />
                    <ImageView  android:layout_height="5dp"
                        android:layout_width="@dimen/len_28"
                        android:layout_gravity="end"
                        android:background="@drawable/background_circle"
                        />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/len_20"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/btn_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_32"
                    android:text="回答"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/len_100"
                    android:textSize="@dimen/len_14"
                    android:background="@color/g_default_base_transparent"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>


        <!--联系人界面-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4"
            android:orientation="vertical"
            android:id="@+id/ContactLayout"
            android:visibility="gone"
            tools:visibility="gone"
            >

            <EditText
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/background_circle"
                android:text="搜索已关注用户"
                android:textSize="@dimen/len_14"
                android:gravity="center"
                android:textStyle="bold"
                android:singleLine="true"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/btn_ordinary"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/len_32"
                        android:layout_marginLeft="@dimen/len_100"
                        android:background="@color/g_default_base_transparent"
                        android:text="关注"
                        android:textSize="@dimen/len_14"
                        android:gravity="center"
                        />
                    <ImageView  android:layout_height="5dp"
                        android:layout_width="@dimen/len_28"
                        android:layout_gravity="end"
                        android:background="@drawable/background_circle"
                        />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/len_20"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/btn_special"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_32"
                    android:text="特别关注"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/len_84"
                    android:textSize="@dimen/len_14"
                    android:background="@color/g_default_base_transparent"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>


        <!--搜索界面-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4"
            android:orientation="vertical"
            android:id="@+id/SearchLayout"
            tools:visibility="gone"
            >

            <EditText
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/background_circle"
                android:text="搜索大学生"
                android:textSize="@dimen/len_14"
                android:gravity="center"
                android:textStyle="bold"
                android:singleLine="true"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/btn_local"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_52"
                    android:layout_marginLeft="@dimen/len_56"
                    android:gravity="center"
                    android:background="@color/g_default_base_transparent"
                    android:text="地区"
                    android:textSize="@dimen/len_14"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/len_20"
                    android:layout_marginLeft="@dimen/len_116"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/btn_school"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_52"
                    android:layout_marginLeft="146dp"
                    android:gravity="center"
                    android:background="@color/g_default_base_transparent"
                    android:text="学校"
                    android:textSize="@dimen/len_14"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/len_20"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/btn_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_52"
                    android:gravity="center"
                    android:text="学科"
                    android:layout_marginRight="146dp"
                    android:textSize="@dimen/len_14"
                    android:background="@color/g_default_base_transparent"
                    android:layout_alignParentRight="true"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/len_20"
                    android:layout_marginRight="@dimen/len_116"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/btn_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_52"
                    android:gravity="center"
                    android:text="年级"
                    android:layout_marginRight="@dimen/len_56"
                    android:textSize="@dimen/len_14"
                    android:background="@color/g_default_base_transparent"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
        </LinearLayout>


        <!--个人信息界面-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/PersonalLayout">

            <net.qiujuer.italker.common.widget.PortraitView
                android:id="@+id/im_portrait"
                android:layout_width="@dimen/len_60"
                android:layout_height="@dimen/len_60"
                android:layout_marginTop="@dimen/len_52"
                android:layout_marginLeft="@dimen/len_32"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                tools:src="@drawable/default_portrait"/>

            <TextView
                android:id="@+id/im_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/len_20"
                android:text="@string/app_name"
                android:textSize="@dimen/len_16"
                android:layout_marginTop="@dimen/len_60"
                android:layout_marginLeft="@dimen/font_112"
                />

            <TextView
                android:id="@+id/im_description"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/len_20"
                android:text="###今天也要元气满满鸭！"
                android:textSize="@dimen/len_14"
                android:layout_marginTop="@dimen/len_84"
                android:layout_marginLeft="@dimen/font_112"/>
        </FrameLayout>


    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/len_52"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <net.qiujuer.genius.ui.widget.FloatActionButton
        android:id="@+id/btn_action"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_52"
        android:layout_marginBottom="@dimen/len_68"
        android:layout_marginEnd="@dimen/len_16"
        android:padding="@dimen/len_20"
        android:src="@drawable/ic_group_add"
        android:tint="@color/white"
        android:translationY="@dimen/len_76"
        app:gBackgroundColor="@color/colorAccent"
        app:layout_anchor="@id/lay_container"
        app:layout_anchorGravity="bottom|end" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_72"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="@dimen/len_4"
        android:outlineProvider="bounds"
        android:translationZ="@dimen/len_8"
        app:itemIconTint="@color/text_nav"
        app:itemTextColor="@color/text_nav"
        tools:targetApi="lollipop"
        tools:visibility="visible"
        app:menu="@menu/navigation_items"/>

</android.support.design.widget.CoordinatorLayout>
