<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/len_2"
    android:layout_marginTop="@dimen/len_2"
    android:background="@color/white"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/len_12"
    android:paddingEnd="@dimen/len_16"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_12">

    <net.qiujuer.italker.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/default_portrait" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/fontNameSize"
        tools:text="@string/app_name" />




    <TextView
        android:id="@+id/im_follow"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/background_color_circle"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/len_2"
        android:text="关注+"
        android:textSize="@dimen/font_12"
        android:tint="@color/white_alpha_208"
        android:gravity="center"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/im_followed"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/background_outline_circle"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/len_2"
        android:text="已关注"
        android:textSize="@dimen/font_12"
        android:textColor="#6AAFE6"
        android:gravity="center"
        android:tint="@color/white_alpha_208"
        android:visibility="gone"/>


</LinearLayout>